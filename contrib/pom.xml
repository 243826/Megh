
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.malhartech</groupId>
    <artifactId>malhar-framework</artifactId>
    <version>0.1-SNAPSHOT</version>
  </parent>

  <artifactId>malhar-contrib</artifactId>
  <packaging>jar</packaging>

  <name>Contrib (with embedded dependencies)</name>
  <url>http://maven.apache.org</url>

  <repositories>
    <!--
      Workaround for dependencies that are not available from a remote repository.
      Only works for building the module, dependencies need to be scoped as provided
      to allow for assembly plugin to work and allow for resolvable transitive closure
      see http://jira.codehaus.org/browse/MNG-5181
    -->
    <repository>
      <id>malhar-contrib-local</id>
      <name>Embedded repository for dependencies not available online</name>
      <url>file://${project.basedir}/maven2</url>
      <snapshots>
        <updatePolicy>never</updatePolicy>
      </snapshots>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
    </repository>
  </repositories>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- skip tests by default as they depend on manual setup -->
    <skip.contrib.module.tests>true</skip.contrib.module.tests>
  </properties>

  <build>
    <plugins>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.12</version>
          <configuration>
              <skipTests>${skip.contrib.module.tests}</skipTests>
              <argLine>-Djava.library.path=${user.home}/.m2/repository/com/almworks/sqlite4java/libsqlite4java-linux-amd64/0.282</argLine>
          </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <source>1.6</source>
          <target>1.6</target>
          <debug>true</debug>
          <optimize>true</optimize>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>malhar-stram</artifactId>
      <version>${project.version}</version>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>malhar-stram</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.malhartech</groupId>
      <artifactId>malhar-library</artifactId>
      <version>${project.version}</version>
      <type>jar</type>
    </dependency>


    <dependency>
     <!-- Since Kafka is not published on the standard mvn repository,
        you will need to download it, compile it and install using
        mvn install:install-file -Dfile=kafka-0.7.1.jar -DgroupId=kafka -DartifactId=kafka -Dversion=0.7.1 -Dpackaging=jar
        Download:
       https://www.apache.org/dyn/closer.cgi/incubator/kafka/kafka-0.7.1-incubating/kafka-0.7.1-incubating-src.tgz
     -->
      <groupId>kafka</groupId>
      <artifactId>kafka</artifactId>
      <version>0.7.1</version>
      <scope>provided</scope> <!-- local repository -->
      <optional>true</optional>
    </dependency>
    <dependency>
      <!--
        jzmq not available from public repository at this time
        http://lists.zeromq.org/pipermail/zeromq-dev/2012-May/017111.html
      -->
      <!-- installed to embedded repository using:
        mvn install:install-file -Dfile=zeromq-1.1.0-SNAPSHOT.jar -DgroupId=org.zeromq -DartifactId=jzmq -Dversion=1.1.0-SNAPSHOT -Dpackaging=jar -DlocalRepositoryPath=maven2
      -->
      <groupId>org.zeromq</groupId>
      <artifactId>jzmq</artifactId>
      <version>2.1.0</version>
      <optional>true</optional> <!-- local repository -->
    </dependency>
    <dependency>
      <groupId>org.mongodb</groupId>
      <artifactId>mongo-java-driver</artifactId>
      <version>2.10.1</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>5.1.22</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.rabbitmq</groupId>
      <artifactId>amqp-client</artifactId>
      <version>2.8.7</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>2.8.0</version>
    </dependency>
    <dependency>
      <groupId>com.github.sgroschupf</groupId>
      <artifactId>zkclient</artifactId>
      <version>0.1</version>
    </dependency>
    <!--dependency>
      <groupId>org.apache.zookeeper</groupId>
      <artifactId>zookeeper</artifactId>
      <version>3.3.5</version>
    </dependency-->
    <dependency>
      <groupId>com.almworks.sqlite4java</groupId>
      <artifactId>sqlite4java</artifactId>
      <version>0.282</version>
      <type>jar</type>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>net.sf.opencsv</groupId>
      <artifactId>opencsv</artifactId>
      <version>2.0</version>
      <scope>test</scope>
      <type>jar</type>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.almworks.sqlite4java</groupId>
      <artifactId>libsqlite4java-linux-amd64</artifactId>
      <version>0.282</version>
      <type>so</type>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.whalin</groupId>
      <artifactId>Memcached-Java-Client</artifactId>
      <version>3.0.1</version>
      <type>jar</type>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.google.code.simple-spring-memcached</groupId>
      <artifactId>spymemcached</artifactId>
      <version>2.8.4</version>
      <type>jar</type>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>rome</groupId>
      <artifactId>rome</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hbase</groupId>
      <artifactId>hbase</artifactId>
      <version>0.94.5</version>
      <type>jar</type>
      <optional>true</optional>
      <exclusions>
        <exclusion>
    	  <groupId>org.slf4j</groupId>
      	  <artifactId>slf4j-log4j12</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>redis.clients</groupId>
      <artifactId>jedis</artifactId>
      <version>2.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-compress</artifactId>
      <version>1.5</version>
    </dependency>
  </dependencies>
</project>
