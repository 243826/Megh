
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.malhartech</groupId>
  <artifactId>malhar-contrib</artifactId>
  <version>0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Contrib with embedded dependencies</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
          <!-- Since Kafka is not published on the standard mvn repository,
               you will need to download it, compile it and install using
               mvn install:install-file -Dfile=kafka-0.7.1.jar -DgroupId=kafka -DartifactId=kafka -Dversion=0.7.1 -Dpackaging=jar
              Download:
              https://www.apache.org/dyn/closer.cgi/incubator/kafka/kafka-0.7.1-incubating/kafka-0.7.1-incubating-src.tgz
          -->
      <groupId>kafka</groupId>
      <artifactId>kafka</artifactId>
      <version>0.7.1</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/kafka-0.7.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>malhar-stram</artifactId>
      <version>${project.version}</version>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>malhar-stram</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <!--
        jzmq not available from public repository at this time
        http://lists.zeromq.org/pipermail/zeromq-dev/2012-May/017111.html
      -->
      <!-- the solution to avoid using systemPath
      http://maven.apache.org/guides/mini/guide-3rd-party-jars-local.html
      my example: mvn install:install-file -Dfile=/home/wzj/work/core/contrib/lib/zeromq-1.1.0-SNAPSHOT.jar -DgroupId=org.zeromq -DartifactId=jzmq -Dversion=1.1.0-SNAPSHOT -Dpackaging=jar
      -->
      <groupId>org.zeromq</groupId>
      <artifactId>jzmq</artifactId>
      <version>1.1.0-SNAPSHOT</version>
<!--      <scope>system</scope>
      <systemPath>${project.basedir}/lib/zeromq-1.1.0-SNAPSHOT.jar</systemPath>-->
    </dependency>
    <dependency>
      <groupId>org.mongodb</groupId>
      <artifactId>mongo-java-driver</artifactId>
      <version>2.9.3</version>
    </dependency>
    <dependency>
      <groupId>com.rabbitmq</groupId>
      <artifactId>amqp-client</artifactId>
      <version>2.8.7</version>
    </dependency>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>2.8.0</version>
    </dependency>
    <dependency>
      <groupId>com.github.sgroschupf</groupId>
      <artifactId>zkclient</artifactId>
      <version>0.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.zookeeper</groupId>
      <artifactId>zookeeper</artifactId>
      <version>3.3.5</version>
    </dependency>
  </dependencies>
</project>
