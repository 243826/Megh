<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!-- Put this in $HOME/.stram/stram-site.xml -->
<configuration>

  <property>
     <name>stram.maxContainers</name>
     <value>33</value>
     </property>

  <property>
     <name>stram.masterMemoryMB</name>
     <value>1024</value>
  </property>

  <property>
     <name>stram.containerMemoryMB</name>
     <!--value>32000</value-->
     <value>512</value>
  </property>

  <property>
     <name>stram.heartbeatTimeoutMillis</name>
     <value>300000</value>
  </property>

<!--
  <property>
     <name>stram.containerJvmOpts</name>
     <value>-Xmx6g -server -Dlog4j.debug=true -Xloggc:/tmp/jvm-%(applicationId)-%(containerId).log -verbose:gc -XX:+PrintGCDateStamps</value>
  </property>
-->

  <!-- for all viewsToHdfs operators -->
  <property>
      <name>stram.template.viewsToHdfs.matchIdRegExp</name>
      <value>viewsToHdfs.*</value>
  </property>
  <property>
      <name>stram.template.viewsToHdfs.filePath</name>
      <value>adsdemo/%(operatorId)-%(contextId).part-%(partIndex)</value>
  </property>
  <property>
      <name>stram.template.viewsToHdfs.bytesPerFile</name>
      <value>256000000</value>
  </property>
  <property>
      <name>stram.template.viewsToHdfs.bufferSize</name>
      <value>128000</value>
  </property>

<!-- daemon -->
  <property>
    <name>stram.daemon.address</name>
    <value>my.host.ip.addr:9090</value>
  </property>
  <property>
    <name>stram.daemon.staticResourceDirectory</name>
    <value>/my/htdocs/dir</value>
  </property>
</configuration>

